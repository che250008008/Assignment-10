#include <iostream>
#include <string>
using namespace std;

struct Employee {
int id;
string name;
float salary;
};

int main() {
Employee emp[10];
int i, choice;

cout << "Enter details of 10 employees:\n";
for (i = 0; i < 10; i++) {
cout << "\nEmployee " << i + 1 << ":\n";
cout << "Enter ID: ";
cin >> emp[i].id;
cout << "Enter Name: ";
cin >> emp[i].name;
cout << "Enter Salary: ";
cin >> emp[i].salary;
}

do {
cout << "1. Display all employees\n";
cout << "2. Search employee by ID\n";
cout << "3. Increase salary (<30000 by 10%)\n";
cout << "4. Exit\n";
cout << "your choice: ";
cin >> choice;

if (choice == 1) {
cout << "\nID\tName\tSalary\n";
for (i = 0; i < 10; i++) {
cout << emp[i].id << "\t" << emp[i].name << "\t" << emp[i].salary << endl;
}
}
else if (choice == 2) {
int sid, found = 0;
cout << "Enter ID to search: ";
cin >> sid;
for (i = 0; i < 10; i++) {
if (emp[i].id == sid) {
cout << "\nEmployee :\n";
cout << "ID: " << emp[i].id << endl;
cout << "Name: " << emp[i].name << endl;
cout << "Salary: " << emp[i].salary << endl;
found = 1;
break;
}
}
if (!found)
cout << "not found\n";
}
else if (choice == 3) {
for (i = 0; i < 10; i++) {
if (emp[i].salary < 30000) {
emp[i].salary = emp[i].salary + emp[i].salary * 0.10;
}
}
cout << "Salaries have been updated!\n";
}
else if (choice == 4) {
cout << "Exit program.\n";
}
else {
cout << "Invalid choice\n";
}

} while (choice != 4);

return 0;
}
